{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@puck-components/*": ["components/puck-editor/puck-components/*"],
      "@puck-config/*": ["components/puck-editor/config/*"],
      "@ui/*": ["components/ui/*"],
      "@skeletons/*": ["components/skeletons/*"],
      "@elements/*": ["components/elements/*"],
      "@elements": ["components/elements/index"],
      "@icons/*": ["components/icons/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
